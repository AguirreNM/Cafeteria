@model PryCafeteria.Models.ProductosTamanio

@{
    ViewData["Title"] = "Eliminación de Tamaño del Producto";
}

<div class="row justify-content-center mt-4">
    <div class="col-md-8">
        <div class="card shadow-sm border-0">
            <div class="card-header bg-danger text-white p-3">
                <h4 class="mb-1">Eliminar Tamaño del Producto</h4>
            </div>
            <div class="card-body p-4">
                <h5 class="text-cafe mb-3">Información del Tamaño del Producto</h5>
                <dl class="row mb-4">
                    <dt class="col-sm-4 text-cafe fw-bold">
                        @Html.DisplayNameFor(model => model.Precio)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.Precio)
                    </dd>
                    <dt class="col-sm-4 text-cafe fw-bold">
                        @Html.DisplayNameFor(model => model.Stock)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.Stock)
                    </dd>
                    <dt class="col-sm-4 text-cafe fw-bold">
                        @Html.DisplayNameFor(model => model.Producto)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.Producto.NombreProducto)
                    </dd>
                    <dt class="col-sm-4 text-cafe fw-bold">
                        @Html.DisplayNameFor(model => model.Tamanio)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.Tamanio.NombreTamanio)
                    </dd>
                </dl>
    
                <form asp-action="Delete" method="post">
                    <input type="hidden" asp-for="ProductoTamanioId" />
                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-danger py-2 fw-bold">
                            Confirmar Eliminación
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary py-2">Cancelar y Volver</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>