@model PryCafeteria.Models.Categoria

@{
    ViewData["Title"] = "Editar Categoría";
}

<div class="row justify-content-center mt-4">
    <div class="col-md-6">
        <div class="card shadow-sm border-0">
            <div class="card-header bg-cafe text-white p-3">
                <h4 class="mb-1">Editar Categoría</h4>
            </div>
            <div class="card-body p-4">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="CategoriaId" />
                    <div class="mb-3">
                        <label asp-for="NombreCategoria" class="form-label fw-bold text-cafe">Nombre de la categoría</label>
                        <input asp-for="NombreCategoria" class="form-control" placeholder="Ingrese el nombre de la categoría" />
                        <span asp-validation-for="NombreCategoria" class="text-danger small"></span>
                    </div>
                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-cafe py-2 fw-bold">
                            Guardar Cambios
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary py-2">
                            Cancelar
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
