@model IEnumerable<PryCafeteria.Models.Categoria>

@{
    ViewData["Title"] = "Categorías";
}

<h1 class="text-cafe mt-4 mb-4">Gestión de Categorías</h1>

@if (TempData["Exito"] != null)
{
    <div class="alert alert-success alert-dismissible fade show">
        <i class="bi bi-check-circle"></i> @TempData["Exito"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show">
        <i class="bi bi-exclamation-circle"></i> @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<p class="mb-3">
    <a asp-action="Create" class="btn btn-cafe">Nueva Categoría</a>
</p>

<table class="table table-hover align-middle border shadow-sm bg-white">
    <thead class="table-dark">
        <tr class="text-center">
            <th class="py-3">Categoría</th>
            <th class="py-3">Productos</th>
            <th class="py-3">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="text-center">
                <td class="fw-bold">@item.NombreCategoria</td>
                <td>
                    <span class="badge @(item.Productos.Count > 0 ? "bg-success" : "bg-secondary")">
                        @item.Productos.Count producto(s)
                    </span>
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.CategoriaId"
                       class="btn btn-sm btn-beige text-white me-1">Actualizar</a> |
                    <a asp-action="Details" asp-route-id="@item.CategoriaId"
                       class="btn btn-sm btn-cafe text-white me-1">Detalles</a> |
                    <a asp-action="Delete" asp-route-id="@item.CategoriaId"
                       class="btn btn-sm btn-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>