@model IEnumerable<PryCafeteria.Models.Categoria>

@{
    ViewData["Title"] = "Categorías";
}

<h1 class="text-cafe mt-4 mb-4 ">Gestión de Categorías</h1>

<p class="mb-3">
    <a asp-action="Create" class="btn btn-cafe">
        Nueva Categoría
    </a>
</p>

<table class="table table-hover align-middle border shadow-sm bg-white">
    <thead class="table-dark">
        <tr class="text-center">
            <th class="py-3">
                @Html.DisplayNameFor(model => model.NombreCategoria)
            </th>
            <th class="py-3">Acciones</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr class="text-center">
            <td class="fw-bold">
                @Html.DisplayFor(modelItem => item.NombreCategoria)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CategoriaId" class="btn btn-sm btn-beige text-white me-1">Actualizar</a> |
                <a asp-action="Details" asp-route-id="@item.CategoriaId" class="btn btn-sm btn-cafe text-white me-1">Detalles</a> |
                <a asp-action="Delete" asp-route-id="@item.CategoriaId" class="btn btn-sm btn-danger">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
