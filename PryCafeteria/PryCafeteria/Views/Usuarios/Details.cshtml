@model PryCafeteria.Models.Usuario

@{
    ViewData["Title"] = "Detalle del Usuario";
}


<div class="row justify-content-center mt-4">
    <div class="col-md-8">
        <div class="card shadow-sm border-0">
            <div>
                <div class="card-header bg-cafe text-white p-3">
                    <h4 class="mb-1">Detalles del Usuario</h4>
                </div>
                <div class="card-body p-4">
                    <dl class="row mb-0">
                        <dt class = "col-sm-4 text-cafe fw-bold py-3">
                            @Html.DisplayNameFor(model => model.Nombre)
                        </dt>
                        <dd class = "col-sm-8 py-3">
                            <span class="h5 mb-0">@Html.DisplayFor(model => model.Nombre)</span>
                        </dd>

                        <dt class = "col-sm-4 text-cafe fw-bold py-3 border-top">
                            @Html.DisplayNameFor(model => model.Email)
                        </dt>
                        <dd class = "col-sm-8 py-3 border-top text-muted">
                            @Html.DisplayFor(model => model.Email)
                        </dd>

                        <dt class = "col-sm-4 text-cafe fw-bold py-3 border-top">
                            @Html.DisplayNameFor(model => model.Contrasena)
                        </dt>
                        <dd class = "col-sm-8 py-3 border-top">
                            <span class="badge bg-secondary px-3 py-2">••••••••</span>
                        </dd>

                        <dt class = "col-sm-4 text-cafe fw-bold py-3 border-top">
                            @Html.DisplayNameFor(model => model.Rol)
                        </dt>
                        <dd class = "col-sm-8 py-3 border-top">
                            <span class="badge bg-cafe text-white px-3 py-2">@Html.DisplayFor(model => model.Rol.RolNombre)</span>
                        </dd>
                    </dl>

                    <hr class="my-4">

                    <div class="d-flex gap-2">
                        <a asp-action="Edit" asp-route-id="@Model?.UsuarioId" class="btn btn-cafe">
                            Editar Usuario
                        </a>
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            Regresar
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>