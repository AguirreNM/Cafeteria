@model IEnumerable<PryCafeteria.Models.Usuario>

@{
    ViewData["Title"] = "Usuarios";
}

<h1 class="text-cafe mt-4 mb-4">Gestión de Usuarios</h1>

<p class="mb-3">
    <a asp-action="Create" class="btn btn-cafe">
        Nuevo Usuario
    </a>
</p>

<table class="table table-hover align-middle border shadow-sm bg-white">
    <thead class="table-dark">
        <tr class="text-center">
            <th class="py-3">
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th class="py-3">
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th class="py-3">
                @Html.DisplayNameFor(model => model.Contrasena)
            </th>
            <th class="py-3">
                @Html.DisplayNameFor(model => model.Rol)
            </th>
            <th class="py-3">Acciones</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr class="text-center">
            <td class="fw-bold">
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td class="text-muted">
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td class="text-muted">
                <span class="badge bg-cafe-light text-cafe">••••••••</span>
            </td>
            <td>
                <span class="badge bg-info text-white">@Html.DisplayFor(modelItem => item.Rol.RolNombre)</span>
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.UsuarioId" class="btn btn-sm btn-beige text-white me-1">Actualizar</a> |
                <a asp-action="Details" asp-route-id="@item.UsuarioId" class="btn btn-sm btn-cafe text-white me-1">Detalles</a> |
                <a asp-action="Delete" asp-route-id="@item.UsuarioId" class="btn btn-sm btn-danger">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>

