@model PryCafeteria.Models.ViewModels.UsuarioViewModel

@{
    ViewData["Title"] = "Editar Usuario";
}

<div class="row justify-content-center mt-4">
    <div class="col-md-6">
        <div class="card shadow-sm border-0">
            <div class="card-header bg-cafe text-white p-3">
                <h4 class="mb-1">Editar Usuario</h4>
            </div>
            <div class="card-body p-4">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                    <input type="hidden" asp-for="Id" />

                    <div class="mb-3">
                        <label asp-for="Nombre" class="form-label fw-bold text-cafe"></label>
                        <input asp-for="Nombre" class="form-control" />
                        <span asp-validation-for="Nombre" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Apellido" class="form-label fw-bold text-cafe"></label>
                        <input asp-for="Apellido" class="form-control" />
                        <span asp-validation-for="Apellido" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Email" class="form-label fw-bold text-cafe"></label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger small"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="Rol" class="form-label fw-bold text-cafe"></label>
                        <select asp-for="Rol" class="form-select">
                            @foreach (var rol in ViewBag.Roles as List<string> ?? new List<string>())
                            {
                                <option value="@rol">@rol</option>
                            }
                        </select>
                        <span asp-validation-for="Rol" class="text-danger small"></span>
                    </div>

                    <small class="text-muted d-block mb-3">
                        * La contraseña no se modifica desde aquí
                    </small>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-cafe py-2 fw-bold">Guardar Cambios</button>
                        <a asp-action="Index" class="btn btn-outline-secondary py-2">Cancelar</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}