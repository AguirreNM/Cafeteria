@model PryCafeteria.Models.Usuario

@{
    ViewData["Title"] = "Eliminar Usuario";
}

<div class="row justify-content-center mt-4">
    <div class="col-md-8">
        <div class="card shadow-sm border-0">
            <div class="card-header bg-danger text-white p-3">
                 <h4 class="mb-1">Eliminar Usuario</h4>
            </div>
            <div class="card-body p-4">
                <h5 class="text-cafe mb-3">Información del Usuario</h5>
                <dl class="row mb-4">
                    <dt class = "col-sm-4 text-cafe fw-bold">
                        @Html.DisplayNameFor(model => model.Nombre)
                    </dt>
                    <dd class = "col-sm-8">
                        @Html.DisplayFor(model => model.Nombre)
                    </dd>
                    <dt class = "col-sm-4 text-cafe fw-bold">
                        @Html.DisplayNameFor(model => model.Email)
                    </dt>
                    <dd class = "col-sm-8 text-muted">
                        @Html.DisplayFor(model => model.Email)
                    </dd>
                    <dt class = "col-sm-4 text-cafe fw-bold">
                        @Html.DisplayNameFor(model => model.Contrasena)
                    </dt>
                    <dd class = "col-sm-8">
                        <span class="badge bg-secondary">••••••••</span>
                    </dd>
                    <dt class = "col text-cafe fw-bold">
                        @Html.DisplayNameFor(model => model.Rol)
                    </dt>
                    <dd class = "col-sm-8">
                        <span class="badge bg-info">@Html.DisplayFor(model => model.Rol.RolNombre)</span>
                    </dd>
                </dl>
    
                <form asp-action="Delete">
                    <input type="hidden" asp-for="UsuarioId" />
                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-danger py-2 fw-bold">
                            Confirmar Eliminación
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary py-2">Cancelar y Volver</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>