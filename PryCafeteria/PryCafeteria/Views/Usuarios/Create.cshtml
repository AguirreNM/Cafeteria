@model PryCafeteria.Models.Usuario

@{
    ViewData["Title"] = "Creacion de Usuario";
}

<div class="row justify-content-center mt-4">
    <div class="col-md-6">
        <div class="card shadow-sm border-0">
            <div class="card-header bg-cafe text-white p-3">
                <h4 class="mb-1">Nuevo Usuario</h4>
            </div>
            <div class="card-body p-4">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                    <div class="mb-3">
                        <label asp-for="Nombre" class="form-label fw-bold text-cafe">Nombre Completo</label>
                        <input asp-for="Nombre" class="form-control form-control-cafe" placeholder="Ingrese el nombre de usuario" />
                        <span asp-validation-for="Nombre" class="text-danger small"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Email" class="form-label fw-bold text-cafe">Correo Electrónico</label>
                        <input asp-for="Email" class="form-control form-control-cafe" placeholder="ejemplo@correo.com"/>
                        <span asp-validation-for="Email" class="text-danger small"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Contrasena" class="form-label fw-bold text-cafe">Contraseña</label>
                        <input asp-for="Contrasena" type="password" class="form-control form-control-cafe" placeholder="Ingrese una contraseña" />
                        <span asp-validation-for="Contrasena" class="text-danger small"></span>
                    </div>
                    <div class="mb-4">
                        <label asp-for="RolId" class="form-label fw-bold text-cafe">Rol</label>
                        <select asp-for="RolId" class ="form-select form-control-cafe" asp-items="ViewBag.RolId">
                            <option value="">-- Seleccione un rol --</option>
                        </select>
                        <span asp-validation-for="RolId" class="text-danger small"></span>
                    </div>
                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-cafe py-2">
                            Guardar Usuario
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            Cancelar
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
    .form-control-cafe:focus,
    .form-select:focus {
        border-color: #00704A;
        box-shadow: 0 0 0 0.2rem rgba(0, 112, 74, 0.15);
    }

    .card-header {
        border-bottom: 3px solid #D4AF77;
    }

    .form-label {
        margin-bottom: 0.5rem;
    }
</style>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
