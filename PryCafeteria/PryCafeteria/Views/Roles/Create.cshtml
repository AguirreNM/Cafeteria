@model PryCafeteria.Models.Role

@{
    ViewData["Title"] = "Creación de Roles";
}

<div class="row justify-content-center mt-4">
    <div class="col-md-6">
        <div class="card shadow-sm border-0">
            <div class="card-header bg-cafe text-white p-3">
                <h4 class="mb-1">Nuevo Rol</h4>
            </div>
            <div class="card-body p-4">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                    <div class="mb-3">
                        <label asp-for="RolNombre" class="form-label fw-bold text-cafe">Nombre del Rol</label>
                        <input asp-for="RolNombre" class="form-control form-control-cafe" placeholder="Ingrese el nombre del rol"/>
                        <span asp-validation-for="RolNombre" class="text-danger small"></span>
                    </div>
                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-cafe py-2">
                            Guardar Rol
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            Cancelar
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
