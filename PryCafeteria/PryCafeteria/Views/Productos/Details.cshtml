@model PryCafeteria.Models.Producto

@{
    ViewData["Title"] = "Detalles del Usuario";
}

<div class="row justify-content-center mt-4">
    <div class="col-md-8">       
        <div class="card shadow-sm border-0">
            <div class="card-header bg-cafe text-white p-3">
                <h4 class="mb-1">Detalles del Producto</h4>
            </div>
            <div class="card-body p-4">
                <dl class="row mb-0">
                    <dt class = "col-sm-4 text-cafe fw-bold py-3">
                        @Html.DisplayNameFor(model => model.NombreProducto)
                    </dt>
                    <dd class = "col-sm-8 py-3">
                        <span class="h5 mb-0">@Html.DisplayFor(model => model.NombreProducto)</span>
                    </dd>
                    <dt class = "col-sm-4 text-cafe fw-bold py-3 border-top">
                        @Html.DisplayNameFor(model => model.Descripcion)
                    </dt>
                    <dd class = "col-sm-8 py-3 border-top text-muted">
                        @Html.DisplayFor(model => model.Descripcion)
                    </dd>
                    <dt class = "col-sm-4 text-cafe fw-bold py-3 border-top">
                        @Html.DisplayNameFor(model => model.Imagen)
                    </dt>
                    <dd class="col-sm-8 py-3 border-top">
                        @Html.DisplayFor(model => model.Imagen)
                    </dd>
                    <dt class = "col-sm-4 text-cafe fw-bold py-3 border-top">
                        @Html.DisplayNameFor(model => model.Disponible)
                    </dt>
                    <dd class = "col-sm-8 py-3 border-top">
                        @Html.DisplayFor(model => model.Disponible)
                    </dd>
                    <dt class = "col-sm-4 text-cafe fw-bold py-3 border-top">
                        @Html.DisplayNameFor(model => model.Categoria)
                    </dt>
                    <dd class = "col-sm-8 py-3 border-top">
                        <span class="badge bg-info px-3 py-2">@Html.DisplayFor(model => model.Categoria.NombreCategoria)</span>
                    </dd>
                </dl>
                <hr class="my-4"/>
                <div class="d-flex gap-2">
                    <a asp-action="Edit" asp-route-id="@Model?.ProductoId" class="btn btn-cafe">
                        Editar Producto
                    </a>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        Volver
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>