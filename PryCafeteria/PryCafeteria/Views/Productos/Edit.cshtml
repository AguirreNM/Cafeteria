@model PryCafeteria.Models.Producto

@{
    ViewData["Title"] = "Editar Producto";
}

<div class="row justify-content-center mt-4">
    <div class="col-md-6">
        <div class="card shadow-sm border-0">
            <div class="card-header bg-cafe text-white p-3">
                <h4 class="mb-1">Editar Producto</h4>
            </div>
            <div class="card-body p-4">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="ProductoId" />
                    <div class="m-3">
                        <label asp-for="NombreProducto" class="form-label fw-bold text-cafe">Nombre del Producto</label>
                        <input asp-for="NombreProducto" class="form-control" placeholder="Ingrese el nombre del producto" />
                        <span asp-validation-for="NombreProducto" class="text-danger small"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Descripcion" class="form-label fw-bold text-cafe"></label>
                        <input asp-for="Descripcion" class="form-control" placeholder="Describe el producto..."/>
                        <span asp-validation-for="Descripcion" class="text-danger small"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="CategoriaId" class="form-label fw-bold text-cafe"></label>
                        <select asp-for="CategoriaId" class="form-control" asp-items="ViewBag.CategoriaId"></select>
                        <span asp-validation-for="CategoriaId" class="text-danger small"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Imagen" class="form-label fw-bold text-cafe"></label>
                        <input asp-for="Imagen" class="form-control" />
                        <span asp-validation-for="Imagen" class="text-danger small"></span>
                    </div>
                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="Disponible" /> @Html.DisplayNameFor(model => model.Disponible)
                        </label>
                    </div>
                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-cafe py-2 fw-bold">
                            Guardar Cambios
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary py-2">
                            Cancelar
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
