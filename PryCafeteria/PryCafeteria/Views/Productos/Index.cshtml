@model IEnumerable<PryCafeteria.Models.Producto>

@{
    ViewData["Title"] = "Productos";
}

<h1 class="text-cafe mt-4 mb-4">Gestión de Productos</h1>

<p class="mb-3">
    <a asp-action="Create" class="btn btn-cafe">
        Nuevo Producto
    </a>
</p>

<table class="table table-hover align-middle border shadow-sm bg-white">
    <thead class="table-dark">
        <tr class="text-center">
            <th class="py-3">
                @Html.DisplayNameFor(model => model.NombreProducto)
            </th>
            <th class="py-3">
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th class="py-3">
                @Html.DisplayNameFor(model => model.Imagen)
            </th>
            <th class="py-3">
                @Html.DisplayNameFor(model => model.Disponible)
            </th>
            <th class="py-3">
                @Html.DisplayNameFor(model => model.Categoria)
            </th>
            <th class="py-3">
                Acciones
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr class="text-center">
            <td class="fw-bold">
                @Html.DisplayFor(modelItem => item.NombreProducto)
            </td>
            <td class="text-muted small">
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>
                @if (!string.IsNullOrEmpty(item.Imagen))
                    {
                        <img src="@item.Imagen" 
                             alt="@item.NombreProducto" 
                             class="img-thumbnail" 
                             style="width: 60px; height: 60px; object-fit: cover;" />
                    }
                    else
                    {
                        <span class="text-muted">Sin imagen</span>
                    }        
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Disponible)
            </td>
            <td>
             <span class="badge bg-info">@Html.DisplayFor(modelItem => item.Categoria.NombreCategoria)</span>
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ProductoId" class="btn btn-sm btn-beige text-white me-1">Actualizar</a> |
                <a asp-action="Details" asp-route-id="@item.ProductoId" class="btn btn-sm btn-cafe text-white me-1">Detalles</a> |
                <a asp-action="Delete" asp-route-id="@item.ProductoId" class="btn btn-sm btn-danger">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
