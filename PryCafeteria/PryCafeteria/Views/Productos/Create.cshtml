@model PryCafeteria.Models.Producto

@{
    ViewData["Title"] = "Nuevo Producto";
}

<div class="row justify-content-center mt-4">
    <div class="col-md-6">
        <div class="card shadow-sm border-0">
            <div class="card-header bg-cafe text-white p-3">
                <h4 class="mb-1">Nuevo Producto</h4>
            </div>
            <div class="card-body p-4">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                    <div class="mb-3">
                        <label asp-for="NombreProducto" class="form-label fw-bold text-cafe">Nombre del Producto</label>
                        <input asp-for="NombreProducto" class="form-control" placeholder="Ej: Café Latte"/>
                        <span asp-validation-for="NombreProducto" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Descripcion" class="form-label fw-bold text-cafe">Descripción</label>
                        <textarea asp-for="Descripcion" class="form-control" rows="3" placeholder="Describe el producto..."></textarea>
                        <span asp-validation-for="Descripcion" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="CategoriaId" class="form-label fw-bold text-cafe">Categoría</label>
                        <select asp-for="CategoriaId" class ="form-select" asp-items="ViewBag.CategoriaId">
                            <option value="">-- Seleccione una categoría --</option>
                        </select>
                        <span asp-validation-for="CategoriaId" class="text-danger small"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="Imagen" class="form-label fw-bold text-cafe">URL de Imagen</label>
                        <input asp-for="Imagen" class="form-control" placeholder="/images/productos/(Categoria)/(Nombre).png" />
                        <span asp-validation-for="Imagen" class="text-danger small"></span>
                        <small class="text-muted">Ingrese la URL de la imagen del producto</small>
                    </div>

                    <div class="mb-4">
                        <div class="form-check">
                            <input asp-action="Disponible" class="form-check-input" type="checkbox" checked/>
                            <label asp-for="Disponible" class="form-check-label fw-bold text-cafe">
                                Producto Disponible
                            </label>
                        </div>
                        <span asp-validation-for="Disponible" class="text-danger small"></span>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-cafe py-2 fw-bold">
                            Guardar Producto
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary py-2">
                            Cancelar
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
